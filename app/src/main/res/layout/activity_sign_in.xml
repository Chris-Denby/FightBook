<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_tint">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:id="@+id/til1_sub"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#50000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="226dp"
                android:layout_height="53dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/logotype"
                app:layout_constraintBottom_toTopOf="@+id/til1_sub"
                app:layout_constraintEnd_toEndOf="@+id/til1_sub"
                app:layout_constraintStart_toStartOf="@+id/til1_sub" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="108dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:text="LOG IN"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="@+id/til1_sub"
                app:layout_constraintStart_toStartOf="@+id/til1_sub"
                app:layout_constraintTop_toTopOf="@+id/til1_sub" />

            <EditText
                android:id="@+id/registerEmailField"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="enter email address"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/til1_sub"
                app:layout_constraintStart_toStartOf="@+id/til1_sub"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="enter password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/til1_sub"
                app:layout_constraintStart_toStartOf="@+id/til1_sub"
                app:layout_constraintTop_toBottomOf="@+id/registerEmailField" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/holo_blue_light"
                android:backgroundTintMode="src_over"
                android:text="REGISTER"
                app:layout_constraintBottom_toTopOf="@+id/loginButton"
                app:layout_constraintEnd_toEndOf="@+id/loginButton"
                app:layout_constraintStart_toStartOf="@+id/loginButton" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/holo_red_light"
                android:backgroundTintMode="src_over"
                android:text="LOGIN"
                app:layout_constraintBottom_toBottomOf="@+id/til1_sub"
                app:layout_constraintEnd_toEndOf="@+id/til1_sub"
                app:layout_constraintStart_toStartOf="@+id/til1_sub" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
