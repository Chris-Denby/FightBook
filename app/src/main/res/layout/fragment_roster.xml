<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/layout"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity"    tools:layout_editor_absoluteY="25dp">    <ListView        android:id="@+id/userList"        style="@android:style/Widget.DeviceDefault.ExpandableListView"        android:layout_width="0dp"        android:layout_height="0dp"        android:layout_marginTop="75dp"        android:background="@color/silver"        android:divider="@color/white"        android:paddingTop="10dp"        android:scrollbars="none"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">    </ListView>    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/top_bar"        android:layout_width="match_parent"        android:layout_height="76dp"        android:background="@color/light_grey_background"        android:elevation="2dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <TextView            android:id="@+id/textView75"            android:layout_width="wrap_content"            android:layout_height="50dp"            android:layout_marginStart="30dp"            android:gravity="fill_vertical"            android:text="Find an opponent"            android:textColor="@color/black"            android:textSize="24dp"            android:textStyle="bold"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <EditText            android:id="@+id/filter_name_field"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="30dp"            android:layout_marginTop="45dp"            android:layout_marginEnd="30dp"            android:layout_marginBottom="8dp"            android:background="@layout/roundcorner_layout"            android:ems="10"            android:hint="search last name...."            android:inputType="textPersonName"            android:paddingStart="8dp"            android:paddingTop="2dp"            android:paddingEnd="8dp"            android:paddingBottom="2dp"            android:shadowDx="2"            android:shadowDy="2"            android:shadowRadius="2"            android:textColor="@color/black"            android:textSize="14sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="@+id/textView75" />    </androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>