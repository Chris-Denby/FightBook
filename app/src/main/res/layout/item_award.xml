<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/awardImage"
      android:layout_width="70dp"
      android:layout_height="52dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/headhunteraward"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/awardQty"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="3dp"
      android:background="@layout/roundcorner_layout_awardqty"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      android:text="0"
      android:textAlignment="center"
      android:textSize="14sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/awardImage"
      app:layout_constraintStart_toStartOf="@+id/awardImage"
      app:layout_constraintTop_toBottomOf="@+id/awardImage" />
</androidx.constraintlayout.widget.ConstraintLayout>